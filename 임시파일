#include <stdio.h>
#include <stdbool.h>
#include<stdlib.h>

#define STACK_SIZE 100

int operands[STACK_SIZE];
int top = 0;

bool is_empty(void);
char pop(void);
void push(char);
void read_expression(void);
void print_result(void);
int convert_num(char);

int main(void){
    for(;;){
        read_expression();
        print_result();
    }
}

void read_expression(void)
{
    char ch;
    int first, second;
    printf("Enter an RPN expression: ")
    while((ch = getchar()) != '\n'){
        if(ch >= '0' && ch <= '9')
            push(convert_num(ch));
        else if(ch == '+')
            push(pop() + pop());
        else if(ch == '*')
            push(pop() * pop());
        else if(ch == '/'){
            second = pop();
            first = pop();
            push(first / second);
        }
        else if(ch == '-'){
            second = pop();
            first = pop();
            push(first - second);
        }
        else
            exit(0);
    }
}
